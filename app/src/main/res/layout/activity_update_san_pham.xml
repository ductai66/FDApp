<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity.UpdateSanPhamActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_insertsp"
        android:background="@color/color_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Cập nhật sản phẩm"
            android:textColor="#4c84ff"
            android:textSize="18sp" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Danh sách Food"
                        android:textColor="#000"
                        android:paddingLeft="20dp"
                        android:layout_weight="4"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <ImageButton
                        android:id="@+id/expand_food"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:src="@drawable/ic_expand_less"/>
                </TableRow>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableLayout>

            <TableLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Danh sách Drink"
                        android:textColor="#000"
                        android:paddingLeft="20dp"
                        android:layout_weight="4"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <ImageButton
                        android:id="@+id/expand_drink"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:src="@drawable/ic_expand_less"/>
                </TableRow>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_drink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableLayout>

            <TableLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Danh sách Combo"
                        android:textColor="#000"
                        android:paddingLeft="20dp"
                        android:layout_weight="4"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <ImageButton
                        android:id="@+id/expand_combo"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:src="@drawable/ic_expand_less"/>
                </TableRow>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_combo"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>