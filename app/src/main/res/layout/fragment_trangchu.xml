<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Trangchu.TrangchuFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_margin="16dp"
                app:cardCornerRadius="16dp"
                android:layout_width="match_parent"
                android:layout_height="225dp">
                <RelativeLayout
                    android:id="@+id/img_home"
                    android:layout_width="match_parent"
                    android:layout_height="225dp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/slide_page"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:foregroundGravity="center"
                        android:overScrollMode="never" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_slide"
                        android:layout_alignBottom="@+id/slide_page"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        app:tabIndicatorHeight="0dp"
                        app:tabGravity="center"
                        app:tabBackground="@drawable/indicator_flag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/line1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/bac"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>
                <TableLayout
                    android:id="@+id/text123"
                    android:layout_below="@+id/line1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView
                            android:text="Bánh Burgers"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/more_food"
                            android:text="Xem thêm->"
                            android:textSize="16sp"
                            android:textColor="#00f"
                            android:layout_weight="1"
                            android:textAlignment="viewEnd"/>
                    </TableRow>
                </TableLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_food"
                    android:layout_below="@+id/text123"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/line2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_below="@+id/recycle_food"
                    android:background="@color/bac"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>
                <TableLayout
                    android:id="@+id/text12"
                    android:layout_below="@+id/line2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView android:text="Trà sữa Tocotoco"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/more_drink"
                            android:text="Xem thêm->"
                            android:textSize="16sp"
                            android:textColor="#00f"
                            android:layout_weight="1"
                            android:textAlignment="viewEnd"/>
                    </TableRow>
                </TableLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_drink"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_below="@+id/text12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/line3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_below="@+id/recycle_drink"
                    android:background="@color/bac"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>
                <TableLayout
                    android:id="@+id/text13"
                    android:layout_below="@+id/line3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView android:text="Combo Big"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/more_combo"
                            android:text="Xem thêm->"
                            android:textSize="16sp"
                            android:textColor="#00f"
                            android:layout_weight="1"
                            android:textAlignment="viewEnd"/>
                    </TableRow>
                </TableLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_combo"
                    android:layout_below="@+id/text13"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>